{
    "version": 2,
    "framework": null,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.2",
            "includeFiles": "**"
        }
    },
    "routes": [
        { "handle": "filesystem" },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "buildCommand": "npm install && npm run build && cp -r public/build build && cp -r public/images images 2>/dev/null || true",
    "installCommand": "npm install"
}