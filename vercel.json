{
    "$schema": "https://openapi.vercel.sh/vercel.json",
    "version": 2,
    "functions": {
        "api/index.php": {
            "runtime": "vercel-php@0.7.2",
            "maxDuration": 30,
            "memory": 1024,
            "includeFiles": "**"
        }
    },
    "routes": [
        { "handle": "filesystem" },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "installCommand": "npm install",
    "buildCommand": "npm run build"
}